[

{
  "name": "get_flights",
  "description": "Determine flight details",
  "parameters": {
    "type": "object",
    "properties": {
      "flight_number": {
        "type": "string",
        "description": "Flight number e.g. AA549"
      },
      "dept_airport": {
        "type": "string",
        "description": "The departure airport, e.g. JFK"
      },
      "arr_airport": {
        "type": "string",
        "description": "The arrival airport, e.g. JFK"
      },
      "dept_time": {
        "type": "string",
        "description": "Time plane is departing from e.g. Monday, Sept 23, 2025 at 4:29 PM"
      },
      "arr_time": {
        "type": "string",
        "description": "Time plane is arriving at e.g. Monday, Sept 23, 2025 at 4:29 PM"
      }
    },
    "required": [ "dept_airport", "arr_airport" ]
  }
},

{
  "name": "get_weather",
  "description": "Determine weather in my location",
  "parameters": {
    "type": "object",
    "properties": {
      "location": {
        "type": "string",
        "description": "The city and state e.g. San Francisco, CA"
      },
      "unit": {
        "type": "string",
        "enum": [
          "c",
          "f"
        ]
      }
    },
    "required": [
      "location"
    ]
  }
}

]
